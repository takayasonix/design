{
  "name": "@design/tokens",
  "version": "0.1.0",
  "description": "Design system tokens - colors, fonts, spacing",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./css": "./dist/tokens.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts && npm run build:css",
    "build:css": "node scripts/build-css.js",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "design-system",
    "tokens",
    "css-variables"
  ],
  "license": "MIT"
}
