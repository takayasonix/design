{
  "name": "@takayaso/tokens",
  "version": "1.0.0",
  "description": "Design system tokens for takayaso.com",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./css": "./dist/tokens.css",
    "./preset": "./dist/preset.js"
  },
  "files": [
    "dist"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts && npm run build:css && npm run build:preset",
    "build:css": "node scripts/build-css.js",
    "build:preset": "node scripts/build-preset.js",
    "build:ui": "npm -w @takayaso/ui run build",
    "build:all": "npm run build && npm run build:ui",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "design-system",
    "tokens",
    "css-variables",
    "tailwind"
  ],
  "author": "takayaso",
  "license": "MIT"
}
